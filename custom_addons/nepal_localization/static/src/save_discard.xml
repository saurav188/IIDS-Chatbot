<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="nepal_localization.inherited_save_discard_btn" t-inherit="web.FormStatusIndicator" t-inherit-mode="primary">
        <xpath expr="//button[hasclass('o_form_button_save')]" position="replace">
            <button
            type="button"
            class="o_form_button_save btn btn-primary px-1 py-0 lh-sm"
            data-hotkey="s"
            t-on-click.stop="save"
            data-tooltip="Save manually"
            aria-label="Save manually"
            t-ref="save">
            Save
        </button>
        </xpath>
        <xpath expr="//button[hasclass('o_form_button_cancel')]" position="inside">
            <button
                type="button"
                class="o_form_button_cancel btn btn-secondary px-1 py-0 lh-sm"
                data-hotkey="j"
                t-on-click.stop="discard"
                data-tooltip="Discard changes"
                aria-label="Discard changes">
                Discard
            </button>
        </xpath>
    </t>
</templates>
